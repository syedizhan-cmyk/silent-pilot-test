.email-campaigns-page {
  padding: 32px;
  max-width: 1600px;
  margin: 0 auto;
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32px;
}

.page-header h1 {
  font-size: 32px;
  font-weight: 700;
  margin-bottom: 8px;
}

.page-header p {
  color: rgba(255, 255, 255, 0.6);
  font-size: 16px;
}

/* Stats Overview */
.stats-overview {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 24px;
  margin-bottom: 32px;
}

.stat-card {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 16px;
  padding: 24px;
  display: flex;
  gap: 16px;
  transition: all 0.3s ease;
}

.stat-card:hover {
  background: rgba(255, 255, 255, 0.08);
  border-color: rgba(88, 101, 242, 0.3);
  transform: translateY(-4px);
}

.stat-icon {
  font-size: 40px;
  width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(88, 101, 242, 0.1);
  border-radius: 12px;
}

.stat-content {
  flex: 1;
}

.stat-label {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 8px;
}

.stat-value {
  font-size: 32px;
  font-weight: 700;
  background: linear-gradient(135deg, #5865F2 0%, #FF73B3 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 4px;
}

.stat-change {
  font-size: 13px;
  font-weight: 600;
}

.stat-change.positive {
  color: #27C93F;
}

/* Tabs */
.content-tabs {
  display: flex;
  gap: 8px;
  margin-bottom: 32px;
  background: rgba(255, 255, 255, 0.05);
  padding: 6px;
  border-radius: 12px;
  width: fit-content;
}

.tab-btn {
  padding: 12px 32px;
  background: transparent;
  border: none;
  color: rgba(255, 255, 255, 0.6);
  cursor: pointer;
  border-radius: 8px;
  font-weight: 600;
  transition: all 0.3s ease;
}

.tab-btn:hover {
  color: rgba(255, 255, 255, 0.9);
  background: rgba(255, 255, 255, 0.05);
}

.tab-btn.active {
  background: linear-gradient(135deg, #5865F2 0%, #FF73B3 100%);
  color: #fff;
}

/* Section Header */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
}

.section-header h2 {
  font-size: 24px;
  font-weight: 600;
}

.filter-buttons {
  display: flex;
  gap: 8px;
}

.filter-btn {
  padding: 8px 20px;
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  color: rgba(255, 255, 255, 0.6);
  cursor: pointer;
  font-size: 14px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.filter-btn:hover {
  background: rgba(255, 255, 255, 0.08);
  color: rgba(255, 255, 255, 0.9);
}

.filter-btn.active {
  background: rgba(88, 101, 242, 0.2);
  border-color: rgba(88, 101, 242, 0.5);
  color: #5865F2;
}

.search-box {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 10px 16px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8px;
}

.search-icon {
  font-size: 16px;
}

.search-box input {
  background: transparent;
  border: none;
  outline: none;
  color: #fff;
  font-size: 14px;
  width: 200px;
}

.search-box input::placeholder {
  color: rgba(255, 255, 255, 0.4);
}

/* Campaigns Grid */
.campaigns-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 24px;
}

.campaign-card {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 16px;
  padding: 24px;
  transition: all 0.3s ease;
}

.campaign-card:hover {
  background: rgba(255, 255, 255, 0.08);
  border-color: rgba(88, 101, 242, 0.3);
  transform: translateY(-4px);
}

.campaign-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16px;
}

.campaign-header h3 {
  font-size: 18px;
  font-weight: 600;
  flex: 1;
}

.status-badge {
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 600;
  text-transform: capitalize;
}

.status-badge.sent {
  background: rgba(39, 201, 63, 0.2);
  color: #27C93F;
}

.status-badge.scheduled {
  background: rgba(88, 101, 242, 0.2);
  color: #5865F2;
}

.status-badge.draft {
  background: rgba(255, 189, 46, 0.2);
  color: #FFBD2E;
}

.campaign-stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16px;
  margin-bottom: 16px;
  padding: 16px;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 12px;
}

.mini-stat {
  text-align: center;
}

.mini-stat-label {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.5);
  margin-bottom: 4px;
}

.mini-stat-value {
  font-size: 20px;
  font-weight: 700;
  color: #fff;
  margin-bottom: 2px;
}

.mini-stat-percent {
  font-size: 11px;
  color: #27C93F;
  font-weight: 600;
}

.campaign-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16px;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.campaign-date {
  font-size: 13px;
  color: rgba(255, 255, 255, 0.5);
}

.campaign-actions {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}


.action-btn:hover:not(:disabled) {
  background: #f5f5f5;
  border-color: #4F46E5;
  transform: translateY(-1px);
}

.action-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}


.action-btn:hover {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.9);
}

/* Templates Grid */
.templates-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 24px;
}

.template-card {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 16px;
  overflow: hidden;
  transition: all 0.3s ease;
}

.template-card:hover {
  background: rgba(255, 255, 255, 0.08);
  border-color: rgba(88, 101, 242, 0.3);
  transform: translateY(-4px);
}

.template-preview {
  height: 150px;
  background: linear-gradient(135deg, rgba(88, 101, 242, 0.1) 0%, rgba(255, 115, 179, 0.1) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.template-icon {
  font-size: 64px;
}

.template-info {
  padding: 20px;
}

.template-info h4 {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 4px;
}

.template-category {
  font-size: 13px;
  color: rgba(255, 255, 255, 0.5);
}

.template-actions {
  display: flex;
  gap: 8px;
  padding: 16px 20px;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

/* Subscribers Section */
.subscribers-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 24px;
  margin-bottom: 32px;
}

.subscriber-stat {
  display: flex;
  align-items: center;
  gap: 16px;
  padding: 24px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 16px;
}

.subscriber-stat-icon {
  font-size: 40px;
  width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(88, 101, 242, 0.1);
  border-radius: 12px;
}

.subscriber-stat-label {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 4px;
}

.subscriber-stat-value {
  font-size: 24px;
  font-weight: 700;
  color: #fff;
}

.segments-section {
  margin-top: 32px;
}

.segments-section h3 {
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 16px;
}

.segments-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 16px;
}

.segment-card {
  padding: 20px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.3s ease;
}

.segment-card:hover {
  background: rgba(255, 255, 255, 0.08);
  border-color: rgba(88, 101, 242, 0.3);
}

.segment-name {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 4px;
}

.segment-count {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.6);
}

/* Quick Actions */
.quick-actions-bar {
  margin-top: 48px;
  padding: 24px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 16px;
}

.quick-actions-bar h3 {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 16px;
}

.quick-actions-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 16px;
}

.quick-action {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 16px 20px;
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  color: rgba(255, 255, 255, 0.9);
  cursor: pointer;
  transition: all 0.3s ease;
  font-weight: 500;
}

.quick-action:hover {
  background: rgba(88, 101, 242, 0.1);
  border-color: rgba(88, 101, 242, 0.3);
  transform: translateX(4px);
}

.quick-action-icon {
  font-size: 24px;
}

.header-actions {
  display: flex;
  gap: 12px;
}

@media (max-width: 768px) {
  .email-campaigns-page {
    padding: 16px;
  }

  .campaigns-grid,
  .templates-grid,
  .segments-grid {
    grid-template-columns: 1fr;
  }

  .section-header {
    flex-direction: column;
    gap: 16px;
    align-items: stretch;
  }

  .filter-buttons {
    overflow-x: auto;
  }
}

/* Complete theme override for EmailCampaigns page */
.email-campaigns-page,
.email-campaigns-v2 {
  background-color: var(--background) !important;
  color: var(--text-primary) !important;
}

.email-campaigns-page *,
.email-campaigns-v2 * {
  border-color: var(--border-color) !important;
}

.email-campaigns-page h1, .email-campaigns-page h2, .email-campaigns-page h3,
.email-campaigns-v2 h1, .email-campaigns-v2 h2, .email-campaigns-v2 h3,
.email-campaigns-page p, .email-campaigns-page span, .email-campaigns-page label,
.email-campaigns-v2 p, .email-campaigns-v2 span, .email-campaigns-v2 label {
  color: var(--text-primary) !important;
}

.email-campaigns-page .campaign-card, .email-campaigns-page .campaign-section,
.email-campaigns-v2 .campaign-card, .email-campaigns-v2 .section-card {
  background: var(--card-background) !important;
  color: var(--text-primary) !important;
}

.email-campaigns-page input, .email-campaigns-page select, .email-campaigns-page textarea,
.email-campaigns-v2 input, .email-campaigns-v2 select, .email-campaigns-v2 textarea {
  background-color: var(--input-background) !important;
  color: var(--text-primary) !important;
  border-color: var(--border-color) !important;
}

/* A/B Testing Styles */
.ab-test-badge {
  margin-top: 12px;
  padding: 8px 12px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 6px;
  font-size: 0.85rem;
  font-weight: 500;
  text-align: center;
}

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(4px);
}

.modal-content {
  background: var(--bg-primary);
  border-radius: 12px;
  max-width: 900px;
  width: 90%;
  max-height: 85vh;
  overflow-y: auto;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24px;
  border-bottom: 1px solid var(--border-color);
}

.modal-header h2 {
  margin: 0;
  font-size: 1.5rem;
  color: var(--text-primary);
}

.modal-close {
  background: none;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
  color: var(--text-secondary);
  padding: 0;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 6px;
  transition: all 0.2s;
}

.modal-close:hover {
  background: var(--bg-secondary);
  color: var(--text-primary);
}

.modal-body {
  padding: 24px;
}

.generating-loader {
  text-align: center;
  padding: 60px 20px;
}

.loader-spinner {
  width: 50px;
  height: 50px;
  border: 4px solid var(--border-color);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20px;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.generating-loader p {
  font-size: 1.1rem;
  margin-bottom: 8px;
  color: var(--text-primary);
}

.generating-loader small {
  color: var(--text-secondary);
}

.variants-intro {
  margin-bottom: 24px;
  padding: 16px;
  background: var(--bg-secondary);
  border-radius: 8px;
  border-left: 4px solid var(--primary-color);
}

.variants-intro p {
  margin: 0;
  font-size: 1rem;
  color: var(--text-primary);
}

.variants-grid {
  display: grid;
  gap: 20px;
  margin-bottom: 24px;
}

.variant-card {
  background: var(--bg-secondary);
  border: 2px solid var(--border-color);
  border-radius: 10px;
  padding: 20px;
  transition: all 0.3s;
}

.variant-card:hover {
  border-color: var(--primary-color);
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.1);
}

.variant-header h3 {
  margin: 0 0 16px 0;
  color: var(--primary-color);
  font-size: 1.1rem;
}

.variant-content {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.variant-field label {
  display: block;
  font-size: 0.85rem;
  font-weight: 600;
  color: var(--text-secondary);
  margin-bottom: 6px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.variant-value {
  padding: 12px;
  background: var(--bg-primary);
  border-radius: 6px;
  border: 1px solid var(--border-color);
  color: var(--text-primary);
  font-size: 1rem;
}

.variant-value.small {
  font-size: 0.9rem;
  color: var(--text-secondary);
}

.variant-hypothesis {
  padding: 12px;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 6px;
  border-left: 3px solid var(--primary-color);
  color: var(--text-primary);
  font-style: italic;
  font-size: 0.95rem;
}

.ab-test-info {
  background: var(--bg-secondary);
  padding: 20px;
  border-radius: 8px;
  margin-bottom: 24px;
}

.ab-test-info h4 {
  margin: 0 0 12px 0;
  color: var(--text-primary);
}

.ab-test-info ul {
  margin: 0;
  padding-left: 20px;
}

.ab-test-info li {
  margin-bottom: 8px;
  color: var(--text-secondary);
  line-height: 1.6;
}

.modal-actions {
  display: flex;
  gap: 12px;
  justify-content: flex-end;
  padding-top: 20px;
  border-top: 1px solid var(--border-color);
}

.variants-comparison {
  display: grid;
  gap: 20px;
}

.variant-result-card {
  background: var(--bg-secondary);
  border: 2px solid var(--border-color);
  border-radius: 10px;
  padding: 20px;
  transition: all 0.3s;
}

.variant-result-card:hover {
  border-color: var(--primary-color);
}

.variant-result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.variant-result-header h4 {
  margin: 0;
  color: var(--text-primary);
}

.winner-badge {
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 0.85rem;
  font-weight: 600;
}

.winner-badge.winner {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
}

.variant-metrics {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
  gap: 16px;
  margin-bottom: 16px;
  padding: 16px;
  background: var(--bg-primary);
  border-radius: 8px;
}

.metric {
  text-align: center;
}

.metric-label {
  font-size: 0.8rem;
  color: var(--text-secondary);
  margin-bottom: 6px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.metric-value {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--primary-color);
}

.variant-details {
  padding-top: 16px;
  border-top: 1px solid var(--border-color);
}

.variant-details p {
  margin: 8px 0;
  font-size: 0.9rem;
  color: var(--text-secondary);
}

.variant-details strong {
  color: var(--text-primary);
}

.no-variants {
  text-align: center;
  padding: 60px 20px;
}

.no-variants p {
  margin-bottom: 20px;
  color: var(--text-secondary);
  font-size: 1.1rem;
}

/* Responsive */
@media (max-width: 768px) {
  .modal-content {
    width: 95%;
    max-height: 90vh;
  }
  
  .variant-metrics {
    grid-template-columns: repeat(2, 1fr);
  }
}

.action-btn {
  padding: 6px 12px;
  font-size: 13px;
  border: 1px solid #ddd;
  background: white;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s;
  white-space: nowrap;
  color: #374151;
}

.action-btn:hover:not(:disabled) {
  background: #f3f4f6;
  border-color: #4F46E5;
}

.action-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}
